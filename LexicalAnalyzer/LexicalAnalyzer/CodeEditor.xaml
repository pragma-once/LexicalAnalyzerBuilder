<UserControl x:Class="LexicalAnalyzer.CodeEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LexicalAnalyzer"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Loaded="UserControl_Loaded" GotFocus="UserControl_GotFocus" Focusable="True">
    <Grid>
        <RichTextBox x:Name="EditorT" Background="Black" BorderBrush="{x:Null}" BorderThickness="0" UseLayoutRounding="False" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" FontFamily="Consolas">
            <FlowDocument/>
        </RichTextBox>
    </Grid>
</UserControl>
